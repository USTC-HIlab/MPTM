#ptmname_menu { 
font:10px verdana, arial, sans-serif; /* 设置文字大小和字体样式 */
}
ul {list-style: none;
padding:0; /* 将默认的内边距去掉 */
margin:0; /* 将默认的外边距去掉 */
}
#menu, #menu li {
list-style:none; /* 将默认的列表符号去掉 */
padding:0; /* 将默认的内边距去掉 */
margin:0; /* 将默认的外边距去掉 */
}
#ptmname_menu li { 
float:left; /* 往左浮动 */
}
#ptmname_menu li a {
display:block; /* 将链接设为块级元素 */
padding:8px 50px; /* 设置内边距 */
background:#3A4953; /* 设置背景色 */
color:#fff; /* 设置文字颜色 */
text-decoration:none; /* 去掉下划线 */
border-right:1px solid #000; /* 在左侧加上分隔线 */
}
#ptmname_menu li a {
display:block; /* 将链接设为块级元素 */
width:50px; /* 设置宽度 */
height:20px; /* 设置高度 */
line-height:20px; /* 设置行高，将行高和高度设置同一个值，可以让单行文本垂直居中 */
text-align:center; /* 居中对齐文字 */
background:#99CCCC; /* 设置背景色 */
color:#000; /* 设置文字颜色 */
text-decoration:none; /* 去掉下划线 */
border-right:1px solid #000; /* 在左侧加上分隔线 */
}
#ptmname_menu li a:hover {
background:#146C9C; /* 变换背景色 */
color:#000; /* 变换文字颜色 */
}
#ptmname_menu li a.last {
border-right:0; /* 去掉左侧边框 */

